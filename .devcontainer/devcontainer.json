{
  "name": "IP2A Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "api",
  "workspaceFolder": "/app",
  // Keep container running when VS Code closes
  "shutdownAction": "none",
  // Don't override the command from docker-compose
  "overrideCommand": false,
  // Mount for VSCode server data persistence
  "mounts": [
    "source=vscode_server_data,target=/root/.vscode-server,type=volume"
  ],
  // Post-create commands (runs once after container is created)
  "postCreateCommand": "pip install -e . 2>/dev/null || true && echo '‚úÖ Dev container ready!'",
  // Post-start commands (runs every time container starts)
  "postStartCommand": "echo 'üöÄ IP2A Dev Container Started' && python -c 'from src.models import Student; print(\"‚úÖ Models OK\")' 2>/dev/null || echo '‚ö†Ô∏è  Models not loaded yet'",
  "customizations": {
    "vscode": {
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        // Linting & Formatting
        "charliermarsh.ruff",
        // Git
        "eamodio.gitlens",
        "mhutchie.git-graph",
        // Database
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        // Utilities
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "streetsidesoftware.code-spell-checker",
        // Claude Code
        "anthropic.claude-code"
      ],
      "settings": {
        // Python
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.autoImportCompletions": true,
        // Ruff (replaces black, isort, flake8)
        "ruff.enable": true,
        "ruff.fixAll": true,
        "ruff.organizeImports": true,
        // Editor
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.ruff": "explicit",
          "source.organizeImports.ruff": "explicit"
        },
        // Files
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/.ruff_cache": true,
          "**/*.pyc": true
        },
        "files.watcherExclude": {
          "**/__pycache__/**": true,
          "**/.pytest_cache/**": true
        },
        // Terminal
        "terminal.integrated.defaultProfile.linux": "bash",
        // SQLTools (for database access)
        "sqltools.connections": [
          {
            "name": "IP2A Dev DB",
            "driver": "PostgreSQL",
            "server": "db",
            "port": 5432,
            "database": "ip2a_db",
            "username": "ip2a_user",
            "password": "supersecret"
          }
        ],
        // Claude Code
        "claude.persistConversations": true
      }
    }
  },
  // Forward ports for easy access
  "forwardPorts": [
    8000,
    5433,
    5050
  ],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "5433": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "5050": {
      "label": "pgAdmin",
      "onAutoForward": "silent"
    }
  },
  // Features to add to the container
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  // Environment variables for the dev container
  "containerEnv": {
    "PYTHONPATH": "/app",
    "IP2A_ENV": "dev"
  }
}
